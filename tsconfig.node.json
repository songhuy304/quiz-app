{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
		}

  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx", "postcss.config.js"],
}
